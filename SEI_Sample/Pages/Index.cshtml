@page
@model SEI_Sample.Pages.IndexModel
@{
}

<script type="text/javascript">
    var productUrl = "http://localhost:5000/api/product";
    $(document).ready(function () {
        var productTable = $('#products').DataTable({
            "ordering": false,
        });
    });

</script>
<div class="text-center">
    <h1 class="productHeader">Product List</h1>
</div>
<table id="products" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Price Per Item</th>
            <th>Average Customer Rating</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricePerItem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AverageCustomerRating)
                </td>
                <td>
                        <a asp-page="ProductDetail" asp-route-id="@item.ProductId" class='btn btn-info fontColor'>Product Detail</a>
                </td>
            </tr>
        }
    </tbody>
</table>


</div>